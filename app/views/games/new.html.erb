<h1>Word Game</h1>
<h2>New Game!</h2>
<ul><% @letters.each do |letter| %>
  <li class="inline background-blue"><%= letter %></li>
  <% end %>
  </ul>
<form action="score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" placeholder="Type the longest word you can think of" name="word">
  <input type="submit">
  <input name="letters" type="hidden" value=<%= @letters.join %>>
</form>
